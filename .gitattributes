# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.py text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf
*.sh text eol=lf
*.dockerfile text eol=lf
Dockerfile text eol=lf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.jar binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# PowerShell scripts should use CRLF
*.ps1 text eol=crlf

# JSON files should use LF
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.conf text eol=lf

# Documentation
*.rst text eol=lf
*.txt text eol=lf
LICENSE text eol=lf
README.md text eol=lf
CHANGELOG.md text eol=lf
CONTRIBUTING.md text eol=lf

